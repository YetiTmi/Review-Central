        </div>

           <div>
               <div class="box"> <!-- area for search bar-->
                   <form action="/search" method="post" enctype="multipart/form-data" id="searchform">
                       <input type="text" id="searchinput" name="product" placeholder="Search for reviews">
                       <button type="submit" id="buttonserch">Search!</button>
                   </form>
               </div>
               <form action="/category" method="post" id="categoryform">
                   <div id="categories">
                       <ul>
                           <li> <button type="submit" id="categoryphone" value="phone">Phones</button> </li> <br>
                           <li> <button type="submit" id="categorytv" value="tv">Televisions</button> </li> <br>
                           <li> <button type="submit" id="categorycomputer" value="computer">Computers</button> </li> <br>
                           <li> <button type="submit" id="categorytablet" value="tablet">Tablets</button> </li> <br>
